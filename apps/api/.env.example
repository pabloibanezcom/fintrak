# Database
MONGODB_URI=mongodb://localhost:27017/fintrak

# JWT
JWT_SECRET=your-secret-key

# External MI Service
MI_AUTH_UI=
MI_API=
MI_USER=
MI_PASS=

# Server
PORT=3000

# Google OAuth (for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Mobile App URL (for OAuth callback)
MOBILE_APP_URL=exp://localhost:8081

# TrueLayer (Open Banking) - OAuth 2.0 Credentials
# Get credentials from https://console.truelayer.com
TRUELAYER_CLIENT_ID=your-truelayer-client-id
TRUELAYER_CLIENT_SECRET=your-truelayer-client-secret
TRUELAYER_REDIRECT_URI=http://localhost:3000/api/bank/callback
# Set to 'false' to use production environment (defaults to sandbox)
TRUELAYER_SANDBOX=true