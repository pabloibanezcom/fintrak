{
  "$schema": "https://biomejs.dev/schemas/biome.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "apps/*/src/**/*",
      "packages/*/src/**/*",
      "prototypes/**/*.html"
    ]
  }
}
